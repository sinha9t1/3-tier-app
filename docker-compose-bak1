version: '3.8'

services:
  db:
    image: postgres:14
    container_name: postgres_db
    restart: always
    env_file:
      - ./node/.env
    environment:
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
      POSTGRES_DB: ${DB_NAME}
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

  node:
    build: ./node
    container_name: node_app
    restart: always
    env_file:
      - ./node/.env
    depends_on:
      - db
    ports:
      - "5000:5000"

        #  react:
        # build: ./react
        # container_name: react_app
        # restart: always
        # depends_on:
        # - node
        # ports:
        # - "3000:3000"

                
  nginx:
    build: ./react #build the React frontend and served via Nginx
    container_name: nginx_proxy
    restart: always
    ports:
      - "80:80"
    depends_on:
      #- react
      - node
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro    

volumes:
  postgres_data:

